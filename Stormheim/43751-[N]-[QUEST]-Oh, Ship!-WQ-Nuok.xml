      <![CDATA[public bool OnQuest => Lua.GetReturnVal<bool>(@"SetMapByID(1017)
local taskInfo = C_TaskQuest.GetQuestsForPlayerByMapID(1017)
if (taskInfo) then
    for i, info  in ipairs(taskInfo) do
        if info.questId == 43751 then
            return true;
            end
    end
end
return false;", 0);]]>
