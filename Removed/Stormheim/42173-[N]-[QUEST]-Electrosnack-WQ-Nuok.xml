    <CustomBehavior File="RunCode" Type="Definition"><![CDATA[public bool OnQuest => Lua.GetReturnVal<bool>(@"SetMapByID(1017)
local taskInfo = C_TaskQuest.GetQuestsForPlayerByMapID(1017)
